# Development Dockerfile for Vite dev server
FROM node:20-alpine
WORKDIR /app

# Install deps during image build for faster container start
COPY package*.json ./
RUN npm ci --silent

# Copy source
COPY . .

# Use polling for file watching reliability inside Docker
ENV CHOKIDAR_USEPOLLING=true

# Start Vite dev server, binding to 0.0.0.0 so container is accessible
CMD ["npm", "run", "dev", "--", "--host", "0.0.0.0", "--port", "5173"]
