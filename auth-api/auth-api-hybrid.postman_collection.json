            },
            "url": {
              "raw": "{{base_url}}/api/reset-password",
              "host": ["{{base_url}}"],
              "path": ["api", "reset-password"]
            },
            "description": "Réinitialise le mot de passe avec fallback automatique Firebase -> PostgreSQL"
          },
          "response": []
        }
      ],
